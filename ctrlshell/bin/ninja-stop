#!/bin/bash
#set -eo pipefail
#ps | grep [j]obwatcher
#skey jobs/run
source /.IPS

IFS=$'\n'
echo

if [ -z ${1} ] ; then
    #echo -e " ${BWhite}${ipscmd}${NC} ${CVAL}<buddy>${NC}"
    INUSERS=($(etcdctl ls usr))
for (( i=0; i<${#INUSERS[@]}; i++ )) ; do
    uuser="${INUSERS[$i]}"
    nuser=$(echo $uuser | cut -d '/' -f 3)
    ninjaserve=($(fleetctl list-units --fields sub,unit,active,machine | grep $nuser | grep ninja))
    if [[ ${#ninjaserve[@]} -lt 1 ]] && [[ -d "/efs/home/${nuser}/node" ]] ; then
        echo -e "${CALERT}${nuser}${NC} setup but ninja shell not running"
        continue
    elif 
        [[ ${#ninjaserve[@]} -lt 1 ]] && [[ ! -d "/efs/home/${nuser}/node" ]] ; then
        continue
    else
        echo -en "${CVAL}${nuser}${NC} "
            userve="${ninjaserve[@]}"
        echo -e "${userve}"
        echo -e "|_/${BWhite}${ipscmd}${NC} ${CVAL}${nuser}${NC}"
        echo
    fi
    done
exit
exit 1
fi

jobstart "$$"
trap "jobtrace '$$'" 0 1 2 3 6

msgbus " stopping services for ${1}"

fleetctl stop keystore@${1}
sleep 4
fleetctl stop ninja@${1}
sleep 5
fleetctl destroy keystore@${1}
sleep 2
fleetctl destroy ninja@${1}
sleep 3

msgbus " removing bucket access"
echo " removing access"
accesskey=($(aws iam list-access-keys --user-name ${1} | jq -r '.AccessKeyMetadata[].AccessKeyId'))
for (( a=0; a<${#accesskey[@]}; a++ )) ; do
aws iam delete-access-key --access-key ${accesskey[$a]} --user-name ${1}
done

sleep 4
aws iam delete-user-policy --user-name ${1} --policy-name ${1}-policy

sleep 4
aws iam delete-user --user-name ${1}

msgbus "node ninja ${1} session removed"
